@model WebApplication1.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_crud.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(model => model.Time)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Time)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.CustomerName)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.CustomerName)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Note)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Note)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.ShipAdress)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.ShipAdress)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.ContactNumber)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.ContactNumber)
		</dd>
		<dt>
			@Html.DisplayNameFor(model => model.Payment.Method)
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Payment.Method.Name)
		</dd>
		<dt></dt>
		<dt class="col-sm-12">
			Ordered Products
		</dt>
		<dd class="col-sm-12">
			<table class="table">
				<tr>
					<th>Id</th>
					<th>Product Name</th>
					<th>Quantity</th>
				</tr>
				@foreach (var item in Model.Products)
				{
					<tr>
						<td>@Html.DisplayFor(modelItem => item.ProductId)</td>
						<td>
							@Html.DisplayFor(modelItem => item.Product.Name)
						</td>
						<td>
							@Html.DisplayFor(modelItem => item.Quantity)
						</td>
						
					</tr>
				}
			</table>
		</dd>

	</dl>
</div>
